---
permalink: rss.xml
eleventyExcludeFromCollections: true
---

{% set posts = collections.post | reverse | slice(0, 20) %}
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
  <channel>
    <title>머니다이어리</title>
    <link>https://www.moneydiary.co.kr</link>
    <description>돈의 흐름을 기록하고 분석하는 블로그</description>
    <language>ko</language>
    <lastBuildDate>
      {% if posts.length and posts[0].date %}
        {{ posts[0].date | rssDate }}
      {% else %}
        {{ "now" | date | rssDate }}
      {% endif %}
    </lastBuildDate>
    <generator>Eleventy</generator>

    {% for post in posts %}
    <item>
      <title>{{ post.data.title | escape }}</title>
      <link>https://www.moneydiary.co.kr{{ post.url }}</link>
      <guid isPermaLink="true">https://www.moneydiary.co.kr{{ post.url }}</guid>
      <pubDate>
        {% if post.date %}
          {{ post.date | rssDate }}
        {% else %}
          {{ "now" | date | rssDate }}
        {% endif %}
      </pubDate>
      <description><![CDATA[{{ post.templateContent | safe }}]]></description>
    </item>
    {% endfor %}
  </channel>
</rss>
