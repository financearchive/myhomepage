{
  "name": "web",
  "version": "1.0.0",
  "description": "Personal Finance Digital Garden",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "npm-run-all get-theme build:sass --parallel watch:*",
    "watch:sass": "sass --watch src/site/styles:dist/styles --no-source-map",
    "watch:eleventy": "cross-env ELEVENTY_ENV=dev eleventy --serve --incremental",
    "build:eleventy": "cross-env ELEVENTY_ENV=prod NODE_ENV=production NODE_OPTIONS=--max-old-space-size=8192 eleventy --incremental",
    "build:sass": "sass src/site/styles:dist/styles --style compressed --no-source-map",
    "get-theme": "node src/site/get-theme.js",
    "build": "NODE_ENV=production NODE_OPTIONS=--max-old-space-size=8192 npm-run-all get-theme build:sass build:eleventy"
  },
  "engines": {
    "node": "22.x"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-rss": "^2.0.2",
    "cross-env": "^7.0.3",
    "html-minifier-terser": "^7.2.0",
    "netlify-plugin-cache": "^1.1.0",
    "node-html-parser": "^6.1.13",
    "sass": "^1.77.8"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^4.0.2",
    "@sindresorhus/slugify": "^2.2.1",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "eleventy-plugin-gen-favicons": "^1.1.2",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "fs-file-tree": "^1.1.1",
    "glob": "^10.4.5",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.0.1",
    "markdown-it-attrs": "^4.2.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-mathjax3": "^4.3.2",
    "markdown-it-plantuml": "^1.4.1",
    "markdown-it-task-checkbox": "^1.0.6",
    "npm-run-all": "^4.1.5",
    "p-map": "^7.0.2",
    "rimraf": "^5.0.10"
  }
}
